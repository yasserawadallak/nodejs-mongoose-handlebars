{{>_msg}}
<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/category/add"> <button class="btn btn-success">Nova Categoria</button></a> 

{{#each Category}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>{{date}}</small><br>
            <small>{{slug}}</small><br>
            <a href="/admin/category/edit/{{_id}}"><button type="submit" class="btn btn-success mt-4">Editar</button></a>
            <form action="/admin/category/delete" method="POST">
                <input type="hidden" name='id' value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <div class="card mt-2">
        <div class="card-body">
            <h3>No match found</h3>
        </div>
    </div>


{{/each}}